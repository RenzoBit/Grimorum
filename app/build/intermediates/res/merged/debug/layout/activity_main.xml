<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="100.0">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_weight="45.0"
        android:layout_width="match_parent" />

    <TableRow
        android:layout_height="wrap_content"
        android:layout_weight="30.0"
        android:layout_width="match_parent"
        android:weightSum="100.0">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="66.0"
            android:layout_width="wrap_content" />

        <TableLayout
            android:layout_height="match_parent"
            android:layout_weight="22.0"
            android:layout_width="wrap_content"
            android:weightSum="100.0">

            <ImageButton
                android:adjustViewBounds="true"
                android:background="@null"
                android:id="@+id/btnhistoria"
                android:layout_height="wrap_content"
                android:layout_weight="28.0"
                android:layout_width="match_parent"
                android:maxHeight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/btnhistoria1" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_weight="8.0"
                android:layout_width="match_parent" />

            <ImageButton
                android:adjustViewBounds="true"
                android:background="@null"
                android:id="@+id/btnduelo"
                android:layout_height="wrap_content"
                android:layout_weight="28.0"
                android:layout_width="match_parent"
                android:maxHeight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/btnduelo1" />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_weight="8.0"
                android:layout_width="match_parent" />

            <ImageButton
                android:adjustViewBounds="true"
                android:background="@null"
                android:id="@+id/btncredito"
                android:layout_height="wrap_content"
                android:layout_weight="28.0"
                android:layout_width="match_parent"
                android:maxHeight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/btncredito1" />
        </TableLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="12.0"
            android:layout_width="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_weight="25.0"
        android:layout_width="match_parent" />
</TableLayout>